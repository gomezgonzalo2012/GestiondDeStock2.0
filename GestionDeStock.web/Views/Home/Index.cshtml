@{
    ViewData["Title"] = "Pagina de inicio";
}

<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card p-4" style="width: 28rem; margin-top: 20px;">
        <div class="card-body">
            <h5 class="card-title text-center">Gestión de Stock</h5>
            <form>
                <div class="form-group">
                    <button type="button" onclick="location.href='@Url.Action("Index", "Ventas")'" class="btn btn-primary btn-block">Ir a Ventas</button>
                </div>
                <div class="form-group">
                    <button type="button" onclick="location.href='@Url.Action("IndexCompras", "Compras")'" class="btn btn-secondary btn-block">Ir a Compras</button>
                </div>
            </form>
        </div>
    </div>
</div>
